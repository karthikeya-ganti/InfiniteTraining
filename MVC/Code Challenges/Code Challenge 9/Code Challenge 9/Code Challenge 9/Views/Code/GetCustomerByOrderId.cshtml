@model IEnumerable<Code_Challenge_9.Models.Customer>
@{
    ViewBag.Title = "Customers with Order No. 10248";
}

<h2>Customers with Order ID 10248</h2>

@{
    <table class="table">
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Company Name</th>
                <th>Contact Name</th>
                <th>City</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.CustomerID</td>
                    <td>@customer.CompanyName</td>
                    <td>@customer.ContactName</td>
                    <td>@customer.City</td>
                </tr>
            }
        </tbody>
    </table>
}